---
import Accordion from "./Accordion.astro";
import AccordionItem from "./AccordionItem.astro";

interface FAQItem {
  id: string;
  title: string;
  content: string;
}

interface Props {
  title: string;
  description?: string;
  faqs?: FAQItem[];
  decorationLeft?: string;
  decorationRight?: string;
}

const { title, description, faqs, decorationLeft, decorationRight } =
  Astro.props;

const headingId = `faq-section-title-${Math.random()
  .toString(36)
  .slice(2, 11)}`;
---

<section
  class="faq-section"
  aria-labelledby={headingId}
>
  {
    decorationLeft && (
      <div class="decoration decoration-left">
        <img
          src={decorationLeft}
          alt=""
          aria-hidden="true"
          loading="lazy"
          width="800"
          height="800"
        />
      </div>
    )
  }

  {
    decorationRight && (
      <div class="decoration decoration-right">
        <img
          src={decorationRight}
          alt=""
          aria-hidden="true"
          loading="lazy"
          width="550"
          height="550"
        />
      </div>
    )
  }

  <div class="faq-container">
    <div class="faq-header">
      <h2 id={headingId} class="faq-title">
        {title}
      </h2>
      {description && (
        <p class="faq-description">
          {description}
        </p>
      )}
    </div>

    {
      Astro.slots?.default ? (
        <slot />
      ) : faqs && faqs.length > 0 ? (
        <Accordion label={title}>
          {faqs.map((faq) => (
            <AccordionItem
              title={faq.title}
              content={faq.content}
            />
          ))}
        </Accordion>
      ) : null
    }
  </div>
</section>

<style>
  .faq-section {
    position: relative;
    padding: var(--space-9) 0;
    overflow: hidden;
  }

  .decoration {
    position: absolute;
    z-index: 0;
    pointer-events: none;
  }

  .decoration img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .decoration-left {
    left: -10%;
    top: -40px;
    transform: rotate(10deg);
    width: 800px;
    height: auto;
  }

  .decoration-right {
    right: -7%;
    top: 0;
    transform: rotate(-10deg);
    width: 550px;
    height: auto;
  }

  .faq-container {
    position: relative;
    z-index: 1;
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 var(--pad-component-lg);
  }

  .faq-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .faq-description {
    margin: 0;
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: var(--line-normal);
    max-width: 600px;
    margin: 0 auto;
  }

  @media (max-width: 1023px) {
    .decoration-left,
    .decoration-right {
      width: 200px;
      height: 200px;
    }
  }

  @media (max-width: 767px) {
    .decoration-left,
    .decoration-right {
      display: none;
    }

    .faq-description {
      font-size: var(--text-sm);
    }
  }
</style>
