---
import { getCollection, render } from "astro:content";
import type { CollectionEntry } from "astro:content";
import LegalPageLayout from "../../../layouts/LegalPageLayout.astro";

type LegalEntry = CollectionEntry<"legal">;

export async function getStaticPaths() {
  const toEsRouteSlug = (slug: string) =>
    slug.endsWith("-es") ? slug.slice(0, -3) : slug;

  const legalEntries: LegalEntry[] = await getCollection(
    "legal",
    ({ data }) => !data.draft && (data.language === "es" || data.language === "both")
  );

  return legalEntries.map((entry) => ({
    params: { slug: toEsRouteSlug(entry.slug) },
    props: { entry, routeSlug: toEsRouteSlug(entry.slug) },
  }));
}

const { entry, routeSlug } = Astro.props;
const { Content } = await render(entry);
---

<LegalPageLayout
  title={entry.data.title}
  description={entry.data.description}
  language="es"
  canonical={`/es/legal/${routeSlug}`}
>
  <Content />
</LegalPageLayout>
