---
interface ServiceItem {
  title: string;
  description: string;
  icon?: string;
}

interface Props {
  title: string;
  description?: string;
  services: ServiceItem[];
  decorationLeft?: string;
  decorationRight?: string;
  schedulingFormUrl?: string;
}

const {
  title,
  description,
  services,
  decorationLeft,
  decorationRight,
  schedulingFormUrl = "/schedule",
} = Astro.props;
---

<section class="services-section">
  {
    decorationLeft && (
      <div class="decoration decoration-left">
        <img src={decorationLeft} alt="" aria-hidden="true" />
      </div>
    )
  }

  {
    decorationRight && (
      <div class="decoration decoration-right">
        <img src={decorationRight} alt="" aria-hidden="true" />
      </div>
    )
  }

  <div class="services-container">
    <div class="services-header">
      <h2 class="services-title">{title}</h2>
      {description && <p class="services-description">{description}</p>}
    </div>

    <div class="services-grid">
      {
        services.map((service) => {
          const serviceParam = encodeURIComponent(service.title);
          const serviceUrl = `${schedulingFormUrl}?service=${serviceParam}`;
          
          return (
            <a href={serviceUrl} class="service-card">
              {service.icon && (
                <div class="service-icon">
                  <img src={service.icon} alt="" />
                </div>
              )}
              
              <h3 class="service-title">{service.title}</h3>
              <p class="service-description">{service.description}</p>
              
              <span class="service-cta">Schedule a Visitation</span>
            </a>
          );
        })
      }
    </div>
  </div>
</section>

<style>
  .services-section {
    position: relative;
    padding: var(--space-9) 0;
    overflow: hidden;
  }

  .decoration {
    position: absolute;
    z-index: 0;
    pointer-events: none;
  }

  .decoration img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .decoration-left {
    left: -10%;
    top: -40px;
    transform: rotate(10deg);
    width: 800px;
    height: auto;
  }

  .decoration-right {
    right: -7%;
    top: 0;
    transform: rotate(-10deg);
    width: 550px;
    height: auto;
  }

  .services-container {
    position: relative;
    z-index: 1;
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 var(--pad-component-lg);
  }

  .services-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .services-title {
    margin: 0 0 var(--space-4);
  }

  .services-description {
    margin: 0;
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    line-height: var(--line-normal);
    max-width: 600px;
    margin: 0 auto;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
  }

  .service-card {
    padding: var(--space-6);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    background: var(--color-surface);
    transition: all var(--duration-std) var(--ease-standard);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .service-card:hover {
    border-color: var(--brand-primary-500);
    box-shadow: 0 0 0 1px var(--brand-primary-500), var(--shadow-md);
    transform: translateY(-4px);
  }

  .service-icon {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary-subtle);
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: all var(--duration-std) var(--ease-standard);
  }

  .service-card:hover .service-icon {
    background: var(--brand-primary-500);
    transform: scale(1.1);
  }

  .service-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: var(--space-2);
  }

  .service-title {
    margin: 0;
    text-decoration: none;
    font-size: var(--text-lg);
    font-weight: var(--weight-bold);
    color: var(--color-text);
    line-height: 1.3;
  }

  .service-description {
    margin: 0;
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--line-normal);
  }

  .service-cta {
    display: inline-flex;
    align-items: center;
    margin-top: auto;
    font-size: var(--text-base);
    font-weight: var(--weight-bold);
    color: var(--brand-secondary-500);
    transition: gap var(--duration-std) var(--ease-standard);
  }

  .service-card:hover .service-cta {
    color: var(--brand-secondary-700);
  }

  @media (max-width: 1023px) {
    .services-grid {
      grid-template-columns: 1fr;
    }

    .decoration-left,
    .decoration-right {
      display: none;
    }
  }

  @media (max-width: 767px) {
    .services-section {
      padding: var(--space-6) 0;
    }

    .services-header {
      margin-bottom: var(--space-6);
    }

    .services-description {
      font-size: var(--text-base);
    }

    .services-grid {
      gap: var(--space-4);
    }

    .service-title {
      font-size: var(--text-base);
    }

    .service-description {
      font-size: var(--text-xs);
    }

    .service-icon {
      width: 50px;
      height: 50px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .service-card,
    .service-icon,
    .service-cta {
      transition: none;
    }

    .service-card:hover {
      transform: none;
    }

    .service-card:hover .service-icon {
      transform: none;
    }
  }
</style>