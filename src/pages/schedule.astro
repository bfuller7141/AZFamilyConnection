---
import BaseLayout from '../layouts/BaseLayout.astro';
import SubpageHero from '../components/SubpageHero.astro';

const serviceParam = Astro.url.searchParams.get('service') || '';

const services = [
  "Off-Site Supervised Visitation",
  "Supervised Exchange",
  "Virtual Supervised Visitation",
  "Court Testimony",
  "Objective Reports",
  "Supervised Visitation (East Valley)",
  "Therapeutic Visitation",
  "Supervised Video/Telephonic Visitation",
  "Safe Exchange",
  "Rule 81 Compliance",
];

import '../styles/base.css';
import '../styles/theme.root.css';
---

<BaseLayout
  title="Schedule a Service - Arizona Family Connections"
  description="Schedule supervised visitation or other family services"
  language="en"
  canonical="/schedule"
>
  <SubpageHero
    subtitle="Get Started"
    title="Schedule Your Service"
    description="Fill out the form below to begin the intake process. We'll review your information and contact you to schedule your service."
  />

  <section class="schedule-section">
    <div class="schedule-container">
      <form class="schedule-form" method="POST" action="/api/schedule">
        <!-- Service Selection -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Service Information</legend>

          <div class="form-group">
            <label for="service" class="form-label">Interested in Service: *</label>
            <select 
              id="service" 
              name="service" 
              class="form-select" 
              required
              data-service-param={serviceParam}
            >
              <option value="">-- Select a Service --</option>
              {
                services.map((service) => (
                  <option value={service}>
                    {service}
                  </option>
                ))
              }
            </select>
          </div>

          <div class="form-group">
            <label class="form-label">Service Type: *</label>
            <div class="form-checkboxes">
              <label class="form-checkbox">
                <input type="checkbox" name="serviceType" value="Supervised Visitation" />
                Supervised Visitation
              </label>
              <label class="form-checkbox">
                <input type="checkbox" name="serviceType" value="Monitored Exchange" />
                Monitored Exchange
              </label>
              <label class="form-checkbox">
                <input type="checkbox" name="serviceType" value="Child Transportation" />
                Child Transportation
              </label>
            </div>
          </div>

          <div class="form-group">
            <label for="caseNumber" class="form-label">Family Law Case Number:</label>
            <input type="text" id="caseNumber" name="caseNumber" class="form-input" />
          </div>

          <div class="form-group">
            <label for="nextCourtDate" class="form-label">Next Court Date:</label>
            <input type="date" id="nextCourtDate" name="nextCourtDate" class="form-input" />
          </div>
        </fieldset>

        <!-- Your Information -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Your Information</legend>

          <div class="form-row">
            <div class="form-group">
              <label for="yourName" class="form-label">Your Name: *</label>
              <input type="text" id="yourName" name="yourName" class="form-input" required />
            </div>
            <div class="form-group">
              <label for="yourRole" class="form-label">Your Role: *</label>
              <select id="yourRole" name="yourRole" class="form-select" required>
                <option value="">-- Select --</option>
                <option value="Custodial Parent">Custodial Parent</option>
                <option value="Visiting Parent">Visiting Parent</option>
                <option value="Guardian">Guardian</option>
                <option value="Attorney">Attorney</option>
              </select>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="email" class="form-label">Email: *</label>
              <input type="email" id="email" name="email" class="form-input" required />
            </div>
            <div class="form-group">
              <label for="phone" class="form-label">Phone Number: *</label>
              <input type="tel" id="phone" name="phone" class="form-input" required />
            </div>
          </div>
        </fieldset>

        <!-- Other Parent Information -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Other Parent Information</legend>

          <div class="form-group">
            <label for="otherParentName" class="form-label">Other Parent Name:</label>
            <input type="text" id="otherParentName" name="otherParentName" class="form-input" />
          </div>
        </fieldset>

        <!-- Children Information -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Children Information</legend>

          <div class="form-group">
            <p class="form-note">Please provide information for each child</p>
          </div>

          {[1, 2, 3].map((index) => (
            <div class="form-child-section">
              <h4 class="form-subheading">Child {index}</h4>
              
              <div class="form-row">
                <div class="form-group">
                  <label for={`childName${index}`} class="form-label">Name:</label>
                  <input type="text" id={`childName${index}`} name={`childName${index}`} class="form-input" />
                </div>
                <div class="form-group">
                  <label for={`childAge${index}`} class="form-label">Age:</label>
                  <input type="number" id={`childAge${index}`} name={`childAge${index}`} class="form-input" min="0" max="18" />
                </div>
              </div>

              <div class="form-group">
                <label for={`childNeeds${index}`} class="form-label">Special Needs or Considerations:</label>
                <textarea id={`childNeeds${index}`} name={`childNeeds${index}`} class="form-textarea" rows="2" placeholder="Any relevant information we should know..."></textarea>
              </div>
            </div>
          ))}
        </fieldset>

        <!-- Safety & Concerns -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Safety & Special Considerations</legend>

          <div class="form-group">
            <label class="form-label">Are there any concerns about family violence or domestic violence?</label>
            <div class="form-radios">
              <label class="form-radio">
                <input type="radio" name="violenceConcerns" value="yes" />
                Yes
              </label>
              <label class="form-radio">
                <input type="radio" name="violenceConcerns" value="no" />
                No
              </label>
            </div>
          </div>

          <div class="form-group">
            <label class="form-label">Is there a current protective (restraining) order?</label>
            <div class="form-radios">
              <label class="form-radio">
                <input type="radio" name="protectiveOrder" value="yes" />
                Yes
              </label>
              <label class="form-radio">
                <input type="radio" name="protectiveOrder" value="no" />
                No
              </label>
            </div>
          </div>

          <div class="form-group">
            <label for="childSafety" class="form-label">Do you have any concerns about the safety of the child/children?</label>
            <textarea id="childSafety" name="childSafety" class="form-textarea" rows="3" placeholder="Please describe any safety concerns..."></textarea>
          </div>

          <div class="form-group">
            <label for="parentSafety" class="form-label">Do you have any concerns about your safety when around the other parent?</label>
            <textarea id="parentSafety" name="parentSafety" class="form-textarea" rows="3" placeholder="Please describe any safety concerns..."></textarea>
          </div>

          <div class="form-group">
            <label for="healthIssues" class="form-label">Do you or your child/children have any health issues we should know about?</label>
            <textarea id="healthIssues" name="healthIssues" class="form-textarea" rows="3" placeholder="Please share relevant health information..."></textarea>
          </div>

          <div class="form-group">
            <label for="additionalInfo" class="form-label">Additional Information:</label>
            <textarea id="additionalInfo" name="additionalInfo" class="form-textarea" rows="4" placeholder="Please share any additional information you think we should know..."></textarea>
          </div>
        </fieldset>

        <!-- Attorney Information -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Legal Representation</legend>

          <div class="form-group">
            <label class="form-label">Are you represented by an attorney?</label>
            <div class="form-radios">
              <label class="form-radio">
                <input type="radio" name="hasAttorney" value="yes" />
                Yes
              </label>
              <label class="form-radio">
                <input type="radio" name="hasAttorney" value="no" />
                No
              </label>
            </div>
          </div>

          <div class="form-group">
            <label for="attorneyInfo" class="form-label">Attorney Name & Phone (if applicable):</label>
            <input type="text" id="attorneyInfo" name="attorneyInfo" class="form-input" />
          </div>
        </fieldset>

        <!-- Language -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Language Preference</legend>

          <div class="form-group">
            <label class="form-label">Can you receive services in English?</label>
            <div class="form-radios">
              <label class="form-radio">
                <input type="radio" name="englishServices" value="yes" required />
                Yes
              </label>
              <label class="form-radio">
                <input type="radio" name="englishServices" value="no" required />
                No
              </label>
            </div>
          </div>
        </fieldset>

        <!-- Submit -->
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Schedule Service</button>
        </div>
      </form>
    </div>
  </section>
</BaseLayout>

<style>
  .schedule-section {
    padding: 0 0 var(--space-8) 0;
  }

  .schedule-container {
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 var(--pad-component-lg);
  }

  .schedule-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .form-fieldset {
    border: 2px solid var(--brand-primary-200);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    margin: 0;
  }

  .form-legend {
    font-size: var(--text-lg);
    font-weight: var(--weight-bold);
    color: var(--brand-primary-500);
    padding: 0 var(--space-2);
    margin-bottom: var(--space-4);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }

  .form-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-4);
  }

  .form-label {
    font-weight: var(--weight-bold);
    font-size: var(--text-base);
    color: var(--color-text);
  }

  .form-input,
  .form-select,
  .form-textarea {
    padding: var(--space-3);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-text);
    background: var(--color-surface);
    transition: all var(--duration-std) var(--ease-standard);
  }

  .form-input:hover,
  .form-select:hover,
  .form-textarea:hover {
    border-color: var(--brand-primary-500);
  }

  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus {
    border-color: var(--brand-primary-500);
  }

  .form-textarea {
    resize: vertical;
    min-height: 100px;
  }

  .form-checkboxes,
  .form-radios {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .form-checkbox,
  .form-radio {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    cursor: pointer;
    font-size: var(--text-sm);
    color: var(--color-text);
  }

  .form-checkbox input,
  .form-radio input {
    cursor: pointer;
    width: 18px;
    height: 18px;
    accent-color: var(--brand-primary-500);
  }

  .form-child-section {
    padding: var(--space-4);
    background: var(--color-surface-2);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-4);
  }

  .form-subheading {
    margin: 0 0 var(--space-3);
    font-size: var(--text-base);
    font-weight: var(--weight-bold);
    color: var(--color-text);
  }

  .form-note {
    margin: 0;
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    font-style: italic;
  }

  .form-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    margin-top: var(--space-6);
    padding-top: var(--space-6);
    border-top: 1px solid var(--color-border);
  }

  @media (max-width: 767px) {
    .schedule-container {
      padding: 0 var(--pad-component);
    }

    .form-fieldset {
      padding: var(--space-4);
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .form-input,
    .form-select,
    .form-textarea {
      font-size: 16px;
    }
  }
</style>

<script is:inline>
  const params = new URLSearchParams(window.location.search);
  const service = params.get("service");

  if (service) {
    const serviceSelect = document.getElementById("service");
    if (serviceSelect) {
      serviceSelect.value = decodeURIComponent(service);
    }
  }
</script>