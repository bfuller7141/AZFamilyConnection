---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SubpageHero from '../../components/SubpageHero.astro';

const serviceParam = Astro.url.searchParams.get('service') || '';

const services = [
  "Visitas Supervisadas Fuera del Sitio",
  "Intercambio Supervisado",
  "Visitas Supervisadas Virtuales",
  "Testimonio en la Corte",
  "Informes Objetivos",
  "Visitas Supervisadas (East Valley)",
  "Visitas Terapéuticas",
  "Visitas Supervisadas por Video/Telefónicas",
  "Intercambio Seguro",
  "Cumplimiento de la Regla 81",
];

import '../../styles/base.css';
import '../../styles/theme.root.css';
---

<BaseLayout
  title="Programar Visitas Supervisadas | AZ Family Connections"
  description="Solicite servicios de visitas supervisadas o intercambio seguro con Arizona Family Connections. Comparta los detalles de su caso y nuestro equipo se comunicará con usted para confirmar su visita pronto."
  language="es"
  canonical="https://arizonafamilyconnections.com/es/schedule"
>
  <SubpageHero
    subtitle="Programe su visita"
    title="Comience su proceso de visitas"
    description="Complete el siguiente formulario para comenzar el proceso de admisión. Nuestro equipo revisará su información y lo contactará para hablar sobre los próximos pasos."
    ctaText="Completar formulario de admisión"
    ctaUrl="/es/schedule#intake-form"
    decorationLeft="/images/calendar-watermark.svg"
    decorationRight="/images/checkbox-watermark.svg"
  />

  <section class="schedule-section">
    <div class="schedule-container">
      <form class="schedule-form" method="POST" action="/api/schedule" id="intake-form">
        
        <!-- Service Selection -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Información del servicio</legend>

          <div class="form-group">
            <label for="service" class="form-label">Servicio de interés: *</label>
            <select 
              id="service" 
              name="service" 
              class="form-select" 
              required
              data-service-param={serviceParam}
            >
              <option value="">-- Seleccione un servicio --</option>
              {
                services.map((service) => (
                  <option value={service}>
                    {service}
                  </option>
                ))
              }
            </select>
          </div>

          <div class="form-group">
            <label class="form-label">Tipo de servicio: *</label>
            <div class="form-checkboxes">
              <label class="form-checkbox">
                <input type="checkbox" name="serviceType" value="Visitas Supervisadas" />
                Visitas Supervisadas
              </label>
              <label class="form-checkbox">
                <input type="checkbox" name="serviceType" value="Intercambio Monitoreado" />
                Intercambio Monitoreado
              </label>
              <label class="form-checkbox">
                <input type="checkbox" name="serviceType" value="Transporte de Niños" />
                Transporte de Niños
              </label>
            </div>
          </div>

          <div class="form-group">
            <label for="caseNumber" class="form-label">Número de caso familiar:</label>
            <input type="text" id="caseNumber" name="caseNumber" class="form-input" />
          </div>

          <div class="form-group">
            <label for="nextCourtDate" class="form-label">Próxima fecha en la corte:</label>
            <input type="date" id="nextCourtDate" name="nextCourtDate" class="form-input" />
          </div>
        </fieldset>

        <!-- Your Information -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Su información</legend>

          <div class="form-row">
            <div class="form-group">
              <label for="yourName" class="form-label">Su nombre: *</label>
              <input type="text" id="yourName" name="yourName" class="form-input" required />
            </div>
            <div class="form-group">
              <label for="yourRole" class="form-label">Su rol: *</label>
              <select id="yourRole" name="yourRole" class="form-select" required>
                <option value="">-- Seleccione --</option>
                <option value="Custodial Parent">Padre/Madre con custodia</option>
                <option value="Visiting Parent">Padre/Madre visitante</option>
                <option value="Guardian">Tutor</option>
                <option value="Attorney">Abogado/a</option>
              </select>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="email" class="form-label">Correo electrónico: *</label>
              <input type="email" id="email" name="email" class="form-input" required />
            </div>
            <div class="form-group">
              <label for="phone" class="form-label">Número de teléfono: *</label>
              <input type="tel" id="phone" name="phone" class="form-input" required />
            </div>
          </div>
        </fieldset>

        <!-- Other Parent Information -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Información del otro padre/madre</legend>

          <div class="form-row">
            <div class="form-group">
              <label for="otherParentName" class="form-label">Nombre del otro padre/madre:</label>
              <input type="text" id="otherParentName" name="otherParentName" class="form-input" />
            </div>
            <div class="form-group">
              <label for="otherParentRole" class="form-label">Rol:</label>
              <select id="otherParentRole" name="otherParentRole" class="form-select">
                <option value="">-- Seleccione --</option>
                <option value="Custodial Parent">Padre/Madre con custodia</option>
                <option value="Visiting Parent">Padre/Madre visitante</option>
                <option value="Guardian">Tutor</option>
                <option value="Attorney">Abogado/a</option>
              </select>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="otherParentEmail" class="form-label">Correo electrónico:</label>
              <input type="email" id="otherParentEmail" name="otherParentEmail" class="form-input" />
            </div>
            <div class="form-group">
              <label for="otherParentPhone" class="form-label">Número de teléfono:</label>
              <input type="tel" id="otherParentPhone" name="otherParentPhone" class="form-input" />
            </div>
          </div>
        </fieldset>

        <!-- Children Information -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Información de los niños</legend>

          <div class="form-group">
            <p class="form-note">Proporcione información para cada niño</p>
          </div>

          {[1, 2, 3].map((index) => (
            <div class="form-child-section">
              <h4 class="form-subheading">Niño {index}</h4>
              
              <div class="form-row">
                <div class="form-group">
                  <label for={`childName${index}`} class="form-label">Nombre:</label>
                  <input type="text" id={`childName${index}`} name={`childName${index}`} class="form-input" />
                </div>
                <div class="form-group">
                  <label for={`childAge${index}`} class="form-label">Edad:</label>
                  <input type="number" id={`childAge${index}`} name={`childAge${index}`} class="form-input" min="0" max="18" />
                </div>
              </div>

              <div class="form-group">
                <label for={`childNeeds${index}`} class="form-label">Necesidades especiales o consideraciones:</label>
                <textarea id={`childNeeds${index}`} name={`childNeeds${index}`} class="form-textarea" rows="2" placeholder="Cualquier información relevante que debamos saber..."></textarea>
              </div>
            </div>
          ))}
        </fieldset>

        <!-- Safety & Concerns -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Seguridad y consideraciones especiales</legend>

          <div class="form-group">
            <label class="form-label">¿Existen preocupaciones sobre violencia familiar o doméstica?</label>
            <div class="form-radios">
              <label class="form-radio">
                <input type="radio" name="violenceConcerns" value="yes" />
                Sí
              </label>
              <label class="form-radio">
                <input type="radio" name="violenceConcerns" value="no" />
                No
              </label>
            </div>
          </div>

          <div class="form-group">
            <label class="form-label">¿Existe actualmente una orden de protección o restricción?</label>
            <div class="form-radios">
              <label class="form-radio">
                <input type="radio" name="protectiveOrder" value="yes" />
                Sí
              </label>
              <label class="form-radio">
                <input type="radio" name="protectiveOrder" value="no" />
                No
              </label>
            </div>
          </div>

          <div class="form-group">
            <label for="childSafety" class="form-label">¿Tiene preocupaciones sobre la seguridad del/de los niño(s)?</label>
            <textarea id="childSafety" name="childSafety" class="form-textarea" rows="3" placeholder="Describa cualquier preocupación de seguridad..."></textarea>
          </div>

          <div class="form-group">
            <label for="parentSafety" class="form-label">¿Tiene preocupaciones sobre su seguridad al estar cerca del otro padre/madre?</label>
            <textarea id="parentSafety" name="parentSafety" class="form-textarea" rows="3" placeholder="Describa cualquier preocupación de seguridad..."></textarea>
          </div>

          <div class="form-group">
            <label for="healthIssues" class="form-label">¿Usted o sus hijos tienen problemas de salud que debamos conocer?</label>
            <textarea id="healthIssues" name="healthIssues" class="form-textarea" rows="3" placeholder="Comparta información médica relevante..."></textarea>
          </div>

          <div class="form-group">
            <label for="additionalInfo" class="form-label">Información adicional:</label>
            <textarea id="additionalInfo" name="additionalInfo" class="form-textarea" rows="4" placeholder="Cualquier información adicional que considere importante..."></textarea>
          </div>
        </fieldset>

        <!-- Attorney Information -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Representación legal</legend>

          <div class="form-group">
            <label class="form-label">¿Cuenta con representación legal?</label>
            <div class="form-radios">
              <label class="form-radio">
                <input type="radio" name="hasAttorney" value="yes" />
                Sí
              </label>
              <label class="form-radio">
                <input type="radio" name="hasAttorney" value="no" />
                No
              </label>
            </div>
          </div>

          <div class="form-group">
            <label for="attorneyInfo" class="form-label">Nombre y teléfono del abogado (si aplica):</label>
            <input type="text" id="attorneyInfo" name="attorneyInfo" class="form-input" />
          </div>
        </fieldset>

        <!-- Language -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Preferencia de idioma</legend>

          <div class="form-group">
            <label class="form-label">¿Puede recibir servicios en inglés?</label>
            <div class="form-radios">
              <label class="form-radio">
                <input type="radio" name="englishServices" value="yes" required />
                Sí
              </label>
              <label class="form-radio">
                <input type="radio" name="englishServices" value="no" required />
                No
              </label>
            </div>
          </div>
        </fieldset>

        <!-- Submit -->
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Programar servicio</button>
        </div>
      </form>
    </div>
  </section>
</BaseLayout>

<style>
  .schedule-section {
    padding: 0 0 var(--space-8) 0;
  }

  .schedule-container {
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 var(--pad-component-lg);
  }

  .schedule-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .form-fieldset {
    border: 2px solid var(--brand-primary-200);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    margin: 0;
  }

  .form-legend {
    font-size: var(--text-lg);
    font-weight: var(--weight-bold);
    color: var(--brand-primary-500);
    padding: 0 var(--space-2);
    margin-bottom: var(--space-4);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }

  .form-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-4);
  }

  .form-label {
    font-weight: var(--weight-bold);
    font-size: var(--text-base);
    color: var(--color-text);
  }

  .form-input,
  .form-select,
  .form-textarea {
    padding: var(--space-3);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-text);
    background: var(--color-surface);
    transition: all var(--duration-std) var(--ease-standard);
  }

  .form-input:hover,
  .form-select:hover,
  .form-textarea:hover {
    border-color: var(--brand-primary-500);
  }

  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus {
    border-color: var(--brand-primary-500);
  }

  .form-textarea {
    resize: vertical;
    min-height: 100px;
  }

  .form-checkboxes,
  .form-radios {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .form-checkbox,
  .form-radio {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    cursor: pointer;
    font-size: var(--text-sm);
    color: var(--color-text);
  }

  .form-checkbox input,
  .form-radio input {
    cursor: pointer;
    width: 18px;
    height: 18px;
    accent-color: var(--brand-primary-500);
  }

  .form-child-section {
    padding: var(--space-4);
    background: var(--color-surface-2);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-4);
  }

  .form-subheading {
    margin: 0 0 var(--space-3);
    font-size: var(--text-base);
    font-weight: var(--weight-bold);
    color: var(--color-text);
  }

  .form-note {
    margin: 0;
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    font-style: italic;
  }

  .form-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    margin-top: var(--space-6);
    padding-top: var(--space-6);
    border-top: 1px solid var(--color-border);
  }

  @media (max-width: 767px) {
    .schedule-container {
      padding: 0 var(--pad-component);
    }

    .form-fieldset {
      padding: var(--space-4);
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .form-input,
    .form-select,
    .form-textarea {
      font-size: 16px;
    }
  }
</style>

<script is:inline>
  const params = new URLSearchParams(window.location.search);
  const service = params.get("service");

  if (service) {
    const serviceSelect = document.getElementById("service");
    if (serviceSelect) {
      serviceSelect.value = decodeURIComponent(service);
    }
  }
</script>
