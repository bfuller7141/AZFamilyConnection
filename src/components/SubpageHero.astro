---
interface Props {
  subtitle: string;
  title: string;
  description?: string;
  ctaText?: string;
  ctaUrl?: string;
  decorationLeft?: string;
  decorationRight?: string;
}

const {
  subtitle,
  title,
  description,
  ctaText,
  ctaUrl = "#",
  decorationLeft,
  decorationRight,
} = Astro.props;

const headingId = `subpage-hero-title-${Math.random().toString(36).slice(2, 10)}`;
const descriptionId = description
  ? `subpage-hero-description-${Math.random().toString(36).slice(2, 10)}`
  : undefined;
---

<section
  class="page-hero"
  aria-labelledby={headingId}
  aria-describedby={descriptionId}
>
  {decorationLeft && (
    <div class="decoration decoration-left" aria-hidden="true">
      <img src={decorationLeft} alt="" loading="lazy" />
    </div>
  )}

  {decorationRight && (
    <div class="decoration decoration-right" aria-hidden="true">
      <img src={decorationRight} alt="" loading="lazy" />
    </div>
  )}

  <div class="page-hero-content">
    <p class="page-hero-subtitle">{subtitle}</p>
    <h1 id={headingId} class="page-hero-title">{title}</h1>

    {description && (
      <p id={descriptionId} class="page-hero-description">
        {description}
      </p>
    )}

    {ctaText && (
      <a href={ctaUrl} class="btn btn-primary">
        {ctaText}
      </a>
    )}
  </div>
</section>

<style>
  .page-hero {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space-10) var(--pad-component-lg);
    min-height: auto;
    overflow: hidden;
  }

  .decoration {
    position: absolute;
    z-index: 0;
    pointer-events: none;
  }

  .decoration img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .decoration-left {
    left: -10%;
    top: 50px;
    transform: rotate(10deg);
    width: 800px;
  }

  .decoration-right {
    right: -7%;
    top: 0;
    transform: rotate(-10deg);
    width: 550px;
  }

  .page-hero-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    max-width: var(--container-lg);
    text-align: center;
  }

  .page-hero-subtitle {
    margin: 0;
    font-size: var(--text-lg);
    font-weight: var(--weight-bold);
    color: var(--brand-secondary-500);
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .page-hero-description {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: var(--line-normal);
    max-width: var(--container-lg);
  }

  @media (max-width: 1023px) {
    .decoration-left,
    .decoration-right {
      display: none;
    }
  }

  @media (max-width: 767px) {
    .page-hero {
      padding: var(--space-7) var(--pad-component);
    }
  }
</style>
