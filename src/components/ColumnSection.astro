---
interface Props {
  image: string;
  imageAlt: string;
  title: string;
  description: string;
  ctaText?: string;
  ctaUrl?: string;
  buttonVariant?: "primary" | "secondary";
  decorationLeft?: string;
  decorationRight?: string;
  imagePosition?: "left" | "right";
}

const {
  image,
  imageAlt,
  title,
  description,
  ctaText = "Learn More",
  ctaUrl = "#",
  buttonVariant = "primary",
  decorationLeft,
  decorationRight,
  imagePosition = "left",
} = Astro.props;

const headingId = `column-section-title-${Math.random()
  .toString(36)
  .slice(2, 11)}`;
---

<section
  class="column-section"
  data-image-position={imagePosition}
  aria-labelledby={headingId}
>
  {
    decorationLeft && (
      <div class="decoration decoration-left">
        <img
          src={decorationLeft}
          alt=""
          aria-hidden="true"
          loading="lazy"
        />
      </div>
    )
  }

  {
    decorationRight && (
      <div class="decoration decoration-right">
        <img
          src={decorationRight}
          alt=""
          aria-hidden="true"
          loading="lazy"
        />
      </div>
    )
  }

  <div class="column-container">
    <!-- Image Column -->
    <div class="column-image">
      <img
        src={image}
        alt={imageAlt}
        class="desktop-image"
        loading="lazy"
      />
    </div>

    <!-- Content Column -->
    <div class="column-content">
      <h2 id={headingId} class="column-title">
        {title}
      </h2>
      <p class="column-description">{description}</p>
      <a href={ctaUrl} class={`btn btn-${buttonVariant}`}>
        {ctaText}
      </a>
    </div>
  </div>
</section>

<style>
  .column-section {
    position: relative;
    padding: var(--space-9) 0;
    overflow: hidden;
  }

  .decoration {
    position: absolute;
    z-index: 0;
    pointer-events: none;
  }

  .decoration img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .decoration-left {
    left: 10%;
    bottom: 50px;
    width: 250px;
    height: auto;
  }

  .decoration-right {
    right: 0;
    top: 40px;
    width: 400px;
    height: auto;
  }

  .column-container {
    position: relative;
    z-index: 1;
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 var(--pad-component-lg);
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .column-section[data-image-position="right"] .column-image {
    order: 2;
  }

  .column-section[data-image-position="right"] .column-content {
    order: 1;
  }

  .column-image {
    width: 100%;
    height: auto;
    box-shadow: var(--shadow-md);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .column-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .column-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .column-content .btn {
    align-self: flex-start;
  }

  @media (max-width: 1023px) {
    .decoration-left,
    .decoration-right {
      display: none;
    }

    .column-container {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .column-section[data-image-position="right"] .column-image {
      order: 0;
    }

    .column-section[data-image-position="right"] .column-content {
      order: 0;
    }
  }

  @media (max-width: 767px) {
    .desktop-image {
      display: none;
    }

    .column-title {
      font-size: var(--text-2xl);
    }

    .column-description {
      font-size: var(--text-sm);
    }

    .column-content .btn {
      width: 100%;
    }
  }
</style>
