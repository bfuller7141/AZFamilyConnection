---
interface Props {
  title: string;
  description: string;
  image: string;
  imageAlt?: string;
  decorationLeft?: string;
}

const { title, description, image, imageAlt, decorationLeft } = Astro.props;

const headingId = `accordion-section-title-${Math.random()
  .toString(36)
  .slice(2, 11)}`;
---

<section
  class="accordion-section"
  aria-labelledby={headingId}
>
  <div class="feature-bg-decoration">
    <slot name="bg-decoration" />
  </div>

  {
    decorationLeft && (
      <div class="decoration decoration-left">
        <img
          src={decorationLeft}
          alt=""
          aria-hidden="true"
          loading="lazy"
          width="500"
          height="500"
        />
      </div>
    )
  }

  <div class="accordion-container">
    <!-- Left Column -->
    <div class="accordion-left">
      <h2 id={headingId}>{title}</h2>
      <p class="accordion-description">{description}</p>

      <div class="accordion-wrapper">
        <slot />
      </div>
    </div>

    <!-- Right Column -->
    <div class="accordion-right">
      <img
        src={image}
        alt={imageAlt ?? ""}
        loading="lazy"
        width="800"
        height="800"
      />
    </div>
  </div>
</section>

<style>
  .accordion-section {
    position: relative;
    padding: var(--space-9) 0;
    overflow: hidden;
  }

  .accordion-container {
    max-width: var(--container-xl);
    padding: 0 var(--pad-component-lg);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 7rem;
    align-items: center;
  }

  /* Left Column */
  .accordion-left {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .accordion-left h2 {
    margin: 0;
    font-size: var(--text-h2);
  }

  .accordion-description {
    margin: 0;
    font-size: var(--text-base);
    color: var(--color-text);
    line-height: 1.6;
  }

  .accordion-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  /* Right Column */
  .accordion-right {
    width: 100%;
    height: 100%;
  }

  .accordion-right img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    object-fit: cover;
  }

  /* =========================================
   * DECORATIONS
   * ========================================= */

  .decoration {
    position: absolute;
    z-index: -1;
    pointer-events: none;
  }

  .decoration img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .decoration-left {
    left: -4%;
    top: 0;
    transform: rotate(0deg);
    width: 500px;
    height: auto;
  }

  /* =========================================
   * RESPONSIVE
   * ========================================= */

  @media (max-width: 1023px) {
    .decoration-left,
    .decoration-right {
      display: none;
    }

    .accordion-container {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
  }

  @media (max-width: 767px) {
    .accordion-left h2 {
      font-size: var(--text-h3);
    }

    .accordion-description {
      font-size: var(--text-base);
    }
  }
</style>

<script is:inline>
  document.addEventListener("click", (e) => {
    const button = e.target?.closest(".accordion-trigger");
    if (!button) return;

    const accordion = button.closest(".accordion");
    if (!accordion) return;

    const allItems = accordion.querySelectorAll(".accordion-item");

    allItems.forEach((el) => {
      const itemButton = el.querySelector(".accordion-trigger");
      const isClicked = itemButton === button;

      if (isClicked) {
        el.classList.toggle("open");
        itemButton.setAttribute(
          "aria-expanded",
          String(el.classList.contains("open"))
        );
      } else {
        el.classList.remove("open");
        itemButton.setAttribute("aria-expanded", "false");
      }
    });
  });

  document.addEventListener("keydown", (e) => {
    const button = e.target;
    if (!button?.classList.contains("accordion-trigger")) return;

    const accordion = button.closest(".accordion");
    if (!accordion) return;

    const allItems = accordion.querySelectorAll(".accordion-item");
    const currentItem = button.closest(".accordion-item");
    const currentIndex = Array.from(allItems).indexOf(currentItem);

    switch (e.key) {
      case "Enter":
      case " ":
        e.preventDefault();
        button.click();
        break;
      case "ArrowDown":
        e.preventDefault();
        const nextIndex = (currentIndex + 1) % allItems.length;
        allItems[nextIndex]?.querySelector(".accordion-trigger")?.focus();
        break;
      case "ArrowUp":
        e.preventDefault();
        const prevIndex = (currentIndex - 1 + allItems.length) % allItems.length;
        allItems[prevIndex]?.querySelector(".accordion-trigger")?.focus();
        break;
    }
  });
</script>