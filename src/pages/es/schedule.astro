---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SubpageHero from '../../components/SubpageHero.astro';

const serviceParam = Astro.url.searchParams.get('service') || '';

const services = [
  "Visitas Supervisadas Fuera del Sitio",
  "Intercambio Supervisado",
  "Visitas Supervisadas Virtuales",
  "Testimonio en la Corte",
  "Informes Objetivos",
  "Visitas Supervisadas (East Valley)",
  "Visitas Terapéuticas",
  "Visitas Supervisadas por Video/Telefónicas",
  "Intercambio Seguro",
  "Cumplimiento de la Regla 81",
];

import '../../styles/base.css';
import '../../styles/theme.root.css';
---

<BaseLayout
  title="Programar Visitas Supervisadas | AZ Family Connections"
  description="Solicite servicios de visitas supervisadas o intercambio seguro con Arizona Family Connections. Comparta los detalles de su caso y nuestro equipo se comunicará con usted para confirmar su visita pronto."
  language="es"
  canonical="https://arizonafamilyconnections.com/es/schedule"
>
  <SubpageHero
    subtitle="Programe su visita"
    title="Comience su proceso de visitas"
    description="Complete el siguiente formulario para comenzar el proceso de admisión. Nuestro equipo revisará su información y lo contactará para hablar sobre los próximos pasos."
    ctaText="Completar formulario de admisión"
    ctaUrl="/es/schedule#intake-form"
    decorationLeft="/images/calendar-watermark.svg"
    decorationRight="/images/checkbox-watermark.svg"
  />

  <section class="schedule-section">
    <div class="schedule-container">
      <form
        class="schedule-form"
        method="POST"
        name="afc-schedule-es"
        data-netlify="true"
        netlify-honeypot="bot-field"
        id="intake-form"
      >
        <!-- Campo oculto requerido para Netlify -->
        <input type="hidden" name="form-name" value="afc-schedule-es" />

        <!-- Campo oculto para asunto personalizado: New Intake from {Name} -->
        <input type="hidden" name="custom-subject" value="" />

        <!-- Honeypot para bots de spam -->
        <p class="honeypot-field" aria-hidden="true">
          <label for="bot-field">No llene este campo si es humano</label>
          <input id="bot-field" name="bot-field" type="text" />
        </p>
        
        <!-- Service Selection -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Información del servicio</legend>

          <div class="form-group">
            <label class="form-label">Tipo de servicio: *</label>
            <div class="form-checkboxes">
              <label class="form-checkbox">
                <input type="checkbox" name="serviceType" value="Visitas Supervisadas" />
                Visitas Supervisadas
              </label>
              <label class="form-checkbox">
                <input type="checkbox" name="serviceType" value="Intercambio Monitoreado" />
                Intercambio Monitoreado
              </label>
              <label class="form-checkbox">
                <input type="checkbox" name="serviceType" value="Transporte de Niños" />
                Transporte de Niños
              </label>
            </div>
          </div>

          <div class="form-group">
            <label for="caseNumber" class="form-label">Número de caso familiar:</label>
            <input type="text" id="caseNumber" name="caseNumber" class="form-input" />
          </div>

          <div class="form-group">
            <label for="nextCourtDate" class="form-label">Próxima fecha en la corte:</label>
            <input type="date" id="nextCourtDate" name="nextCourtDate" class="form-input" />
          </div>
        </fieldset>

        <!-- Your Information -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Su información</legend>

          <div class="form-row">
            <div class="form-group">
              <label for="yourName" class="form-label">Su nombre: *</label>
              <input type="text" id="yourName" name="yourName" class="form-input" required />
            </div>
            <div class="form-group">
              <label for="yourRole" class="form-label">Su rol: *</label>
              <select id="yourRole" name="yourRole" class="form-select" required>
                <option value="">-- Seleccione --</option>
                <option value="Custodial Parent">Padre/Madre con custodia</option>
                <option value="Visiting Parent">Padre/Madre visitante</option>
                <option value="Guardian">Tutor</option>
                <option value="Attorney">Abogado/a</option>
              </select>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="email" class="form-label">Correo electrónico: *</label>
              <input type="email" id="email" name="email" class="form-input" required />
            </div>
            <div class="form-group">
              <label for="phone" class="form-label">Número de teléfono: *</label>
              <input type="tel" id="phone" name="phone" class="form-input" required />
            </div>
          </div>
        </fieldset>

        <!-- Other Parent Information -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Información del otro padre/madre</legend>

          <div class="form-row">
            <div class="form-group">
              <label for="otherParentName" class="form-label">Nombre del otro padre/madre:</label>
              <input type="text" id="otherParentName" name="otherParentName" class="form-input" />
            </div>
            <div class="form-group">
              <label for="otherParentRole" class="form-label">Rol:</label>
              <select id="otherParentRole" name="otherParentRole" class="form-select">
                <option value="">-- Seleccione --</option>
                <option value="Custodial Parent">Padre/Madre con custodia</option>
                <option value="Visiting Parent">Padre/Madre visitante</option>
                <option value="Guardian">Tutor</option>
                <option value="Attorney">Abogado/a</option>
              </select>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="otherParentEmail" class="form-label">Correo electrónico:</label>
              <input type="email" id="otherParentEmail" name="otherParentEmail" class="form-input" />
            </div>
            <div class="form-group">
              <label for="otherParentPhone" class="form-label">Número de teléfono:</label>
              <input type="tel" id="otherParentPhone" name="otherParentPhone" class="form-input" />
            </div>
          </div>
        </fieldset>

        <!-- Attorney Information -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Representación legal</legend>

          <div class="form-group">
            <label class="form-label">¿Cuenta con representación legal?</label>
            <div class="form-radios">
              <label class="form-radio">
                <input type="radio" name="hasAttorney" value="yes" />
                Sí
              </label>
              <label class="form-radio">
                <input type="radio" name="hasAttorney" value="no" />
                No
              </label>
            </div>
          </div>

          <div class="form-group">
            <label for="attorneyInfo" class="form-label">Nombre y teléfono del abogado (si aplica):</label>
            <input type="text" id="attorneyInfo" name="attorneyInfo" class="form-input" />
          </div>
        </fieldset>

        <!-- Language -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Preferencia de idioma</legend>

          <div class="form-group">
            <label for="languagePreference" class="form-label">Idioma de preferencia: *</label>
            <select id="languagePreference" name="languagePreference" class="form-select" required>
              <option value="">-- Seleccione un idioma --</option>
              <option value="English">Inglés</option>
              <option value="Spanish">Español</option>
              <option value="Chinese">Chino</option>
              <option value="Tagalog">Tagalo</option>
              <option value="Vietnamese">Vietnamita</option>
              <option value="Arabic">Árabe</option>
              <option value="French">Francés</option>
              <option value="Korean">Coreano</option>
              <option value="Russian">Ruso</option>
              <option value="Portuguese">Portugués</option>
              <option value="Other">Otro</option>
            </select>
          </div>
        </fieldset>

        <!-- Submit -->
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Programar servicio</button>
        </div>
      </form>
    </div>
  </section>
</BaseLayout>

<style>
  .schedule-section {
    padding: 0 0 var(--space-8) 0;
  }

  .schedule-container {
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 var(--pad-component-lg);
  }

  .schedule-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .form-fieldset {
    border: 2px solid var(--brand-primary-200);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    margin: 0;
  }

  .form-legend {
    font-size: var(--text-lg);
    font-weight: var(--weight-bold);
    color: var(--brand-primary-500);
    padding: 0 var(--space-2);
    margin-bottom: var(--space-4);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }

  .form-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-4);
  }

  .form-label {
    font-weight: var(--weight-bold);
    font-size: var(--text-base);
    color: var(--color-text);
  }

  .form-input,
  .form-select,
  .form-textarea {
    padding: var(--space-3);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-text);
    background: var(--color-surface);
    transition: all var(--duration-std) var(--ease-standard);
  }

  .form-input:hover,
  .form-select:hover,
  .form-textarea:hover {
    border-color: var(--brand-primary-500);
  }

  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus {
    border-color: var(--brand-primary-500);
  }

  .form-textarea {
    resize: vertical;
    min-height: 100px;
  }

  .form-checkboxes,
  .form-radios {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .form-checkbox,
  .form-radio {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    cursor: pointer;
    font-size: var(--text-sm);
    color: var(--color-text);
  }

  .form-checkbox input,
  .form-radio input {
    cursor: pointer;
    width: 18px;
    height: 18px;
    accent-color: var(--brand-primary-500);
  }

  .form-child-section {
    padding: var(--space-4);
    background: var(--color-surface-2);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-4);
  }

  .form-subheading {
    margin: 0 0 var(--space-3);
    font-size: var(--text-base);
    font-weight: var(--weight-bold);
    color: var(--color-text);
  }

  .form-note {
    margin: 0;
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    font-style: italic;
  }

  .form-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    margin-top: var(--space-6);
    padding-top: var(--space-6);
    border-top: 1px solid var(--color-border);
  }

  .honeypot-field {
    display: none;
  }

  @media (max-width: 767px) {
    .schedule-container {
      padding: 0 var(--pad-component);
    }

    .form-fieldset {
      padding: var(--space-4);
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .form-input,
    .form-select,
    .form-textarea {
      font-size: 16px;
    }
  }
</style>

<script is:inline>
  // Mantener la preselección de servicio desde el query string
  (function () {
    const params = new URLSearchParams(window.location.search);
    const serviceParam = params.get("service");
    const serviceSelect = document.getElementById("service");
    if (serviceParam && serviceSelect) {
      serviceSelect.value = decodeURIComponent(serviceParam);
    }
  })();

  function encodeFormData(data) {
    const pairs = [];
    for (const [key, value] of data.entries()) {
      pairs.push(encodeURIComponent(key) + '=' + encodeURIComponent(value));
    }
    return pairs.join('&');
  }

  const scheduleForm = document.querySelector('.schedule-form');

  if (scheduleForm instanceof HTMLFormElement) {
    scheduleForm.addEventListener('submit', (event) => {
      event.preventDefault();

      const formData = new FormData(scheduleForm);

      const yourName = formData.get('yourName');
      const email = formData.get('email');
      const phone = formData.get('phone');
      const service = formData.get('service');

      if (!yourName || !email || !phone || !service) {
        alert('Por favor complete todos los campos obligatorios antes de enviar.');
        return;
      }

      // Asegurar que Netlify sepa qué formulario es
      formData.set('form-name', scheduleForm.getAttribute('name') || 'afc-schedule-es');

      // Asunto personalizado: "New Intake from {Name}" (igual que en inglés)
      const customSubject = `New Intake from ${yourName}`;
      formData.set('custom-subject', customSubject);

      // Mantener input oculto sincronizado (opcional)
      const customSubjectInput = scheduleForm.querySelector('input[name="custom-subject"]');
      if (customSubjectInput) {
        customSubjectInput.value = customSubject;
      }

      fetch('/', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: encodeFormData(formData),
      })
        .then(() => {
          console.log('Formulario de programación enviado:', Object.fromEntries(formData.entries()));
          alert('Gracias por completar el formulario de admisión. Nuestro equipo se pondrá en contacto con usted pronto.');
          scheduleForm.reset();

          // Volver a aplicar la preselección de servicio desde la URL después del reset (opcional)
          const params = new URLSearchParams(window.location.search);
          const serviceParam = params.get("service");
          const serviceSelect = document.getElementById("service");
          if (serviceParam && serviceSelect) {
            serviceSelect.value = decodeURIComponent(serviceParam);
          }
        })
        .catch((error) => {
          console.error('Error al enviar el formulario de programación:', error);
          alert('Hubo un problema al enviar el formulario. Por favor, inténtelo de nuevo.');
        });
    });
  }
</script>
