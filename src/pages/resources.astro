---
import BaseLayout from '../layouts/BaseLayout.astro';
import SubpageHero from '../components/SubpageHero.astro';
import ResourceSection from '../components/ResourceSection.astro';
import FAQSection from '../components/FAQSection.astro';
import MainCTA from '../components/MainCTA.astro';
import ColorDividerShort from '../components/ColorDividerShort.astro';

import '../styles/base.css';
import '../styles/theme.root.css';
---

<BaseLayout
  title="Family Documents & Resources | Arizona Family Connections"
  description="Access supervised visitation documents, intake forms, policies, and resources from Arizona Family Connections to prepare for safe, supported family visits."
  language="en"
  canonical="/resources"
>
  <SubpageHero
    subtitle="Documents & Resources"
    title="Documents & Resources to Support Your Journey"
    description="Find all the necessary forms, policies, and resources to ensure a smooth experience with Arizona Family Connections. We're here to support you every step of the way."
    ctaText="Schedule a Visit"
    ctaUrl="/schedule"
    decorationLeft="/images/waveGreen-watermark.svg"
    decorationRight="/images/puzzleYellow-watermark.svg"
  />

  <ColorDividerShort />

  <ResourceSection
    title=""
  />

  <FAQSection
    title="Frequently Asked Questions"
    faqs={[
      {
        id: "1",
        title: "What services do you offer?",
        content: "We offer comprehensive family support services including counseling, education programs, and resource coordination.",
      },
      {
        id: "2",
        title: "How do I enroll?",
        content: "You can enroll by visiting our office or filling out the online enrollment form on our website.",
      },
      {
        id: "3",
        title: "What is the cost?",
        content: "Our services are free for eligible families. Contact us to learn about eligibility requirements.",
      },
      {
        id: "4",
        title: "Do you offer services in Spanish?",
        content: "Yes, we offer bilingual services in both English and Spanish.",
      },
    ]}
  />

  <MainCTA
    title="Ready to Take the Next Step Together?"
    primaryCta={{
      text: "Schedule a Visit",
      url: "/schedule",
    }}
    secondaryCta={{
      text: "Our Services",
      url: "/services",
    }}
    decorationLeft="/images/rainbow-watermark.svg"
    decorationRight="/images/starFilled-watermark.svg"
  />
</BaseLayout>