---
interface Props {
  subtitle: string;
  title: string;
  description?: string;
  ctaText?: string;
  ctaUrl?: string;
  images: Array<{
    src: string;
    alt: string;
  }>;
  decorationLeft?: string;
  decorationRight?: string;
}

const {
  subtitle,
  title,
  description,
  ctaText = "Get Started",
  ctaUrl = "#",
  images,
  decorationLeft,
  decorationRight,
} = Astro.props;
---

<section
  class="about-hero"
  aria-labelledby="about-hero-title"
  aria-describedby={description ? "about-hero-description" : undefined}
>
  {
    decorationLeft && (
      <div class="decoration decoration-left">
        <img src={decorationLeft} alt="" aria-hidden="true" loading="lazy" />
      </div>
    )
  }

  {
    decorationRight && (
      <div class="decoration decoration-right">
        <img src={decorationRight} alt="" aria-hidden="true" loading="lazy" />
      </div>
    )
  }

  <div class="about-hero-content">
    <p class="about-hero-subtitle">{subtitle}</p>

    <h1 id="about-hero-title" class="about-hero-title">
      {title}
    </h1>

    {description && (
      <p id="about-hero-description" class="about-hero-description">
        {description}
      </p>
    )}

    <a href={ctaUrl} class="btn btn-primary about-hero-cta">
      {ctaText}
    </a>
  </div>

  <div class="about-hero-images">
    {images.map((image, index) => (
      <div class={`image-column ${index === 1 ? "center" : ""}`}>
        <img src={image.src} alt={image.alt} loading="lazy" />
      </div>
    ))}
  </div>
</section>

<style>
  .about-hero {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: var(--space-10) var(--pad-component-lg);
    gap: var(--space-8);
    min-height: auto;
    overflow: hidden;
  }

  .decoration {
    position: absolute;
    z-index: 0;
    pointer-events: none;
  }

  .decoration img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .decoration-left {
    left: -10%;
    top: 50px;
    transform: rotate(-10deg);
    width: 700px;
    height: auto;
  }

  .decoration-right {
    right: -7%;
    top: 0;
    transform: rotate(-10deg);
    width: 550px;
    height: auto;
  }

  .about-hero-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    max-width: var(--container-lg);
    text-align: center;
  }

  .about-hero-subtitle {
    margin: 0;
    font-size: var(--text-lg);
    font-weight: var(--weight-bold);
    color: var(--brand-secondary-500);
    letter-spacing: 0.5px;
  }

  .about-hero-title {
    margin: 0;
  }

  .about-hero-description {
    margin: 0;
  }

  .about-hero-cta {
    margin-top: var(--space-4);
  }

  .about-hero-images {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
    width: 100%;
    max-width: 1200px;
    align-items: flex-start;
  }

  .image-column {
    display: flex;
    flex-direction: column;
  }

  .image-column.center {
    transform: translateY(var(--space-6));
  }

  .image-column img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    object-fit: cover;
  }

  @media (max-width: 1023px) {
    .decoration-left,
    .decoration-right {
      display: none;
    }

    .about-hero-images {
      gap: var(--space-4);
    }

    .image-column.center {
      transform: translateY(var(--space-4));
    }
  }

  @media (max-width: 767px) {
    .about-hero-images {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .image-column {
      display: none;
    }

    .image-column.center {
      display: flex;
      transform: translateY(0);
    }

    .image-column img {
      max-width: 500px;
      margin: 0 auto;
    }
  }
</style>
