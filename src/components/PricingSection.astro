---
interface Card {
  title: string;
  price: string;
  subtitle: string;
  features: string[];
  buttonText: string;
  buttonUrl?: string;
}

interface Props {
  title: string;
  cards: Card[];
  ctaButtons?: Array<{
    text: string;
    variant: "primary" | "text";
    url?: string;
  }>;
  decorationLeft?: string;
  decorationRight?: string;
  disclaimer?: string;
  disclaimerLinkUrl?: string;
}

const {
  title,
  cards,
  ctaButtons,
  decorationLeft,
  decorationRight,
  disclaimer,
  disclaimerLinkUrl,
} = Astro.props;

const headingId = `pricing-title-${Math.random().toString(36).slice(2, 10)}`;
---

<section class="pricing-section" aria-labelledby={headingId} id="pricing">
  {decorationLeft && (
    <div class="decoration decoration-left" aria-hidden="true">
      <img src={decorationLeft} alt="" loading="lazy" />
    </div>
  )}

  {decorationRight && (
    <div class="decoration decoration-right" aria-hidden="true">
      <img src={decorationRight} alt="" loading="lazy" />
    </div>
  )}

  <div class="pricing-container">
    <h2 id={headingId} class="pricing-title">
      {title}
    </h2>

    <div class="pricing-cards" role="list">
      {cards.map((card, index) => (
        <div class={`pricing-card card-${index}`} role="listitem">
          <h3 class="card-title">{card.title}</h3>

          <div class="card-price">
            <span class="price-amount">{card.price}</span>
            <span class="price-label">{card.subtitle}</span>
          </div>

          <ul class="card-features">
            {card.features.map((feature) => (
              <li>{feature}</li>
            ))}
          </ul>

          <a
            href={card.buttonUrl || "/schedule"}
            class="card-button"
          >
            {card.buttonText}
          </a>
        </div>
      ))}
    </div>
    <div class="disclaimer-wrapper">
      {(disclaimer || disclaimerLinkUrl) && (
        <p class="pricing-disclaimer">
          {disclaimer}
          {disclaimerLinkUrl && (
            <>
              {" "}
              <a
                href={disclaimerLinkUrl}
                class="pricing-disclaimer-link"
                target="_blank"
                rel="noopener noreferrer"
              >
                Download the full agreement (PDF)
                <span class="sr-only"> (opens in a new tab)</span>
              </a>
            </>
          )}
        </p>
      )}
    </div>

    {ctaButtons && ctaButtons.length > 0 && (
      <div class="pricing-cta">
        {ctaButtons.map((btn) => (
          <a
            href={btn.url || "#"}
            class={`btn btn-${btn.variant}`}
          >
            {btn.text}
          </a>
        ))}
      </div>
    )}
  </div>
</section>

<style>
  .pricing-section {
    position: relative;
    padding: var(--space-9) 0;
    background: var(--neutral-50, #f8faff);
    overflow: hidden;
  }

  .decoration {
    position: absolute;
    z-index: 0;
    pointer-events: none;
  }

  .decoration img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .decoration-left {
    left: 9%;
    top: 80px;
    transform: rotate(-20deg);
    width: 250px;
  }

  .decoration-right {
    right: 0;
    bottom: 200px;
    transform: rotate(-10deg);
    width: 550px;
  }

  .pricing-container {
    position: relative;
    z-index: 1;
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 var(--pad-component-lg);
  }

  .pricing-title {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .pricing-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-7);
    margin-bottom: var(--space-6);
    align-items: flex-start;
  }

  .pricing-card {
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    display: flex;
    flex-direction: column;
    transition:
      transform var(--duration-std) var(--ease-standard),
      box-shadow var(--duration-std) var(--ease-standard),
      border-color var(--duration-std) var(--ease-standard),
      background-color var(--duration-std) var(--ease-standard);
  }

  .card-button {
    display: inline-block;
    padding: var(--space-3) var(--space-5);
    border: none;
    border-radius: var(--radius-md);
    font-weight: var(--weight-medium);
    font-size: var(--text-sm);
    cursor: pointer;
    transition:
      transform var(--duration-std) var(--ease-standard),
      background-color var(--duration-std) var(--ease-standard),
      box-shadow var(--duration-std) var(--ease-standard);
    font-family: var(--font-heading);
    text-decoration: none;
    text-align: center;
  }

  .card-0 {
    background: var(--brand-secondary-50);
    border: 2px solid var(--brand-secondary-500);
  }

  .card-0 .card-title {
    color: var(--brand-secondary-500);
  }

  .card-0 .price-amount {
    color: var(--brand-secondary-500);
  }

  .card-0 .card-button {
    background: var(--brand-secondary-500);
    color: var(--neutral-0);
  }

  .card-0 .card-button:hover {
    background: var(--brand-secondary-600);
  }

  .card-1 {
    background: var(--brand-primary-50);
    border: 2px solid var(--brand-primary-500);
    transform: scale(1.08);
  }

  .card-1 .card-title {
    color: var(--brand-primary-500);
  }

  .card-1 .price-amount {
    color: var(--brand-primary-500);
  }

  .card-1 .card-button {
    background: var(--brand-primary-500);
    color: var(--neutral-0);
  }

  .card-1 .card-button:hover {
    background: var(--brand-primary-600);
  }

  .card-2 {
    background: var(--brand-tertiary-50);
    border: 2px solid var(--brand-tertiary-500);
  }

  .card-2 .card-title {
    color: var(--brand-tertiary-500);
  }

  .card-2 .price-amount {
    color: var(--brand-tertiary-500);
  }

  .card-2 .card-button {
    background: var(--brand-tertiary-500);
    color: var(--neutral-0);
  }

  .card-2 .card-button:hover {
    background: var(--brand-tertiary-600);
  }

  .card-title {
    font-size: var(--text-sm);
    font-weight: var(--weight-bold);
    margin-bottom: var(--space-1);
  }

  .card-price {
    display: flex;
    align-items: baseline;
    gap: var(--space-2);
    margin-bottom: var(--space-5);
  }

  .price-amount {
    font-size: var(--text-h3);
    font-weight: var(--weight-bold);
  }

  .price-label {
    font-size: var(--text-sm);
    color: var(--color-text-subtle);
    font-weight: var(--weight-medium);
  }

  .card-features {
    list-style: none;
    margin: 0 0 var(--space-5);
    padding: 0;
    flex-grow: 1;
  }

  .card-features li {
    padding: var(--space-2) 0;
    color: var(--color-text);
    line-height: var(--line-normal);
  }

  .card-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-elev-1);
  }

  .disclaimer-wrapper {
    text-align: center;
    margin-top: var(--space-6);
  }

  .pricing-disclaimer {
    max-width: 56rem;
    margin: 0 auto var(--space-6);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    text-align: center;
    line-height: var(--line-normal);
  }

  .pricing-disclaimer-link {
    font-weight: var(--weight-medium);
    color: var(--brand-primary-600);
    text-decoration: underline;
  }

  .pricing-disclaimer-link:hover {
    color: var(--brand-primary-700);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .pricing-cta {
    display: flex;
    justify-content: center;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  @media (max-width: 767px) {
    .decoration-left,
    .decoration-right {
      display: none;
    }

    .pricing-cards {
      grid-template-columns: 1fr;
    }

    .card-1 {
      transform: scale(1);
    }

    .pricing-cta {
      flex-direction: column;
    }

    .pricing-cta .btn {
      width: 100%;
      text-align: center;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .pricing-card,
    .card-button {
      transition: none;
      transform: none;
      box-shadow: none;
    }
  }
</style>
