---
import BaseLayout from '../layouts/BaseLayout.astro';
import HomeHero from '../components/HomeHero.astro';
import FeatureSection from '../components/FeatureSection.astro';
import AccordionSection from '../components/AccordionSection.astro';
import Accordion from '../components/Accordion.astro';
import AccordionItem from '../components/AccordionItem.astro';
import PricingSection from '../components/PricingSection.astro';
import ColumnSection from '../components/ColumnSection.astro';
import DocumentsResourcesSection from '../components/ResourceSection.astro';
import FAQSection from '../components/FAQSection.astro';
import MainCTA from '../components/MainCTA.astro';

import ColorDivider from '../components/ColorDivider.astro';
import PageBreakCloud from '../components/PageBreakCloud.astro';

import '../styles/base.css';
import '../styles/theme.root.css';
import ColorDividerShort from '../components/ColorDividerShort.astro';
---

<BaseLayout
  title="Arizona Family Connections | Court Ordered Visitation"
  description="Arizona Family Connections provides safe, compassionate supervised visitation services that help children and parents stay connected in a supportive setting."
  language="en"
  canonical="/"
>
  <HomeHero
    backgroundImage="/images/home-hero_desktop.webp"
    backgroundImageMobile="/images/home-hero_mobile.webp"
    heading="Trusted Support for Stronger Connections"
    description="Providing safe, compassionate supervised visitation services that help families reconnect and grow together."
    primaryCta={{
      text: 'Get Started',
      url: '/schedule/',
    }}
    secondaryCta={{
      text: 'About Our Services',
      url: '/services/',
    }}
  />
  <FeatureSection
    title="Creating Safe Spaces for Family Connection"
    description="At Arizona Family Connections, we understand that every family’s situation is unique. Our supervised visitation services provide a safe, neutral environment where children and parents can spend meaningful time together. Each visit is guided by trained, compassionate supervisors who ensure every interaction supports the child’s well-being and encourages positive, healthy relationships."
    ctaText="Get Started"
    ctaUrl="/schedule/"
    decorationLeft="/images/rainbow-watermark.svg"
    decorationRight="/images/cactus-watermark.svg"
    features={[
      {
        icon: '/images/heart-icon.svg',
        title: 'Safety First',
        description: 'Every visit happens in a secure setting designed to support the child.',
      },
      {
        icon: '/images/scale-icon.svg',
        title: 'Fair and Neutral',
        description: 'Supervisors stay unbiased to help each parent feel respected.',
      },
      {
        icon: '/images/family-icon.svg',
        title: 'Positive Growth',
        description: 'Visits focus on building comfort, trust, and healthy communication.',
      },
    ]}
  >
    </div>
  </FeatureSection>
  <ColorDivider />
  <AccordionSection
    title="Visitation Options That Fit Every Family’s Needs"
    description="We offer flexible visitation settings that make each meeting safe, comfortable, and meaningful for everyone involved."
    image="/images/father-son-blocks.webp"
    imageAlt="Father and young child playing together with colorful wooden blocks and toy cars at a table."
    decorationLeft="/images/yellowHand-watermark.svg"
  >
    <Accordion>
      <AccordionItem
        title="On-Site Visits"
        content="Our office provides a quiet, monitored setting designed for comfort and safety. Supervisors are present throughout each visit to support positive, low-stress interactions."
      />
      <AccordionItem
        title="In-Home Visits"
        content="When appropriate, visits can take place in the family home. This option supports children who feel most at ease in familiar surroundings, always under supervised care."
      />
      <AccordionItem
        title="Community Visits"
        content="Families can meet in community settings like parks or museums for natural, engaging experiences. Supervisors ensure each visit remains safe and appropriate for everyone involved."
      />
    </Accordion>
  </AccordionSection>
  <PageBreakCloud bgColor="#f8faff" />
  <PricingSection
    title="Types of Services We Offer"
    decorationLeft="/images/star-watermark-dark.svg"
    decorationRight="/images/wave-watermark-dark.svg"
    cards={[
      {
        title: "Available Service Types",
        features: [
          "Supervised visitation (on-site, in-home, and community-based)",
          "Monitored exchange",
          "Virtual and telephonic visits",
          "Transportation support for pickups and drop-offs",
          "Objective reports and court testimony when requested",
          "Bilingual support in English and Spanish",
        ],
        buttonText: "View All Services",
        buttonUrl: "/services/",
      },
    ]}
    disclaimer="Need help choosing the right option for your family? Contact our team at contact@azfamilyconnections.com and we will help guide you."
    ctaButtons={[
      { text: "Get Started", variant: "primary", url: "/schedule/" },
      { text: "About Our Services", variant: "text", url: "/services/" },
    ]}
  />
  <PageBreakCloud bgColor="#f8faff" flip={true} />
  <ColumnSection
    image="/images/mother-son-selfie.webp"
    imageAlt="Mother and young child lying on the floor smiling while taking a selfie together with a smartphone."
    title="Here for Families, Every Step of the Way"
    description="Reunification is a journey, and no family should walk it alone. We’re here to provide steady guidance, safe spaces, and genuine care that help relationships heal and grow stronger with each visit. Through patience, understanding, and consistent support, we help families find stability and renewed trust, one connection at a time."
    ctaText="Get Started"
    ctaUrl="/schedule/"
    buttonVariant="primary"
    imagePosition="left"
    decorationLeft="/images/pinkDots-watermark.svg"
    decorationRight="/images/sun-watermark.svg"
  />
  <DocumentsResourcesSection
    title="Documents & Resources"
    limit={6}
    decorationRight="/images/greenHand-watermark.svg"
    allResourcesUrl="/resources/"
    allResourcesText="View All Resources"
    filterCategories={["documents", "forms"]}
/>

  <ColorDividerShort />
  <FAQSection
    title="Frequently Asked Questions"
    description="Find quick answers about supervised visitation, exchanges, transportation, and getting started with Arizona Family Connections."
  >
    <Accordion label="Frequently Asked Questions">
      <AccordionItem title="Are you a member of any professional organizations?">
        <p>
          Yes. Arizona Family Connections is listed with SV Directory and the Supervised Visitation Network.
          We are also included in the RSAT and Second Chance Resource databases, and we are an active
          member of the Peoria Chamber of Commerce.
        </p>
      </AccordionItem>

      <AccordionItem title="How much do you charge?">
        <p>
          Our supervised visitation and monitored exchange fees are billed hourly and are based on the number
          of children and the type of service provided. You can view current rates in our
          <a href="/#pricing" class="link-inline">pricing section</a>. If you have questions about your
          specific situation, please reach out and we’ll be happy to walk through costs with you.
        </p>
      </AccordionItem>

      <AccordionItem title="Do you provide transportation for children?">
        <p>
          Yes. A member of our team can pick up and drop off your child when transportation is needed for a
          visit or exchange. There is a transportation fee, and our staff can provide car seats when required.
          For details about routes and current rates, please contact our team or review our service and
          pricing information.
        </p>
        <p>
          If transportation will be part of your plan, we recommend noting this during the intake process so
          we can plan accordingly.
        </p>
      </AccordionItem>

      <AccordionItem title="What types of services do you offer?">
        <p>
          We provide a range of services to support safe and structured parent–child contact, including
          supervised visitation, monitored exchanges, virtual/telephonic visits, transportation support, and
          related documentation such as objective reports and court testimony when appropriate.
        </p>
        <p>
          You can learn more about each option on our
          <a href="/services/" class="link-inline">Services page</a>.
        </p>
      </AccordionItem>

      <AccordionItem title="Where do visits take place?">
        <p>
          Visits can occur in a variety of settings depending on the case, including our office, approved
          community locations, or other arrangements that support the safety and well-being of the child.
        </p>
        <p>
          Specific locations are determined during the intake and scheduling process. For a full overview of
          our supervised visitation and exchange settings, please visit our
          <a href="/services/" class="link-inline">Services page</a>.
        </p>
      </AccordionItem>

      <AccordionItem title="How do I get started?">
        <p>
          To begin, complete our secure intake form so we can review your case details, court orders, and
          any safety considerations. Once we receive your information, our team will follow up to confirm
          eligibility, discuss available services, and get started with your first visit.
        </p>
        <p>
          You can start the process at any time on our
          <a href="/schedule/" class="link-inline">Schedule page</a>.
        </p>
      </AccordionItem>

      <AccordionItem title="Do you offer services in Spanish?">
        <p>
          Yes. We can provide services and communication in both English and Spanish where needed. If you or
          a family member prefers Spanish, please let us know during intake so we can plan appropriate
          support.
        </p>
        <p>
          To review available services, visit our
          <a href="/services/" class="link-inline">Services page</a>, or begin the intake process on our
          <a href="/schedule/" class="link-inline">Schedule page</a>.
        </p>
      </AccordionItem>
    </Accordion>
  </FAQSection>
  <MainCTA
    title="Ready to Take the Next Step Together?"
    primaryCta={{
      text: "Get Started",
      url: "/schedule/",
    }}
    secondaryCta={{
      text: "Our Services",
      url: "/services/",
    }}
    decorationLeft="/images/rainbow-watermark.svg"
    decorationRight="/images/starFilled-watermark.svg"
  />
</BaseLayout>


