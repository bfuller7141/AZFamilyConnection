---
interface Props {
  title: string;
  description: string;
  image: string;
  imageAlt?: string;
  decorationLeft?: string;
}

const { title, description, image, imageAlt, decorationLeft } =
  Astro.props;
---

<section class="accordion-section">
  <div class="feature-bg-decoration">
    <slot name="bg-decoration" />
  </div>

  {
    decorationLeft && (
      <div class="decoration decoration-left">
        <img src={decorationLeft} alt="" aria-hidden="true" />
      </div>
    )
  }
  <div class="accordion-container">
    <!-- Left Column -->
    <div class="accordion-left">
      <h2>{title}</h2>
      <p class="accordion-description">{description}</p>

      <div class="accordion-wrapper">
        <slot />
      </div>
    </div>

    <!-- Right Column -->
    <div class="accordion-right">
      <img src={image} alt={imageAlt} />
    </div>
  </div>
</section>

<style>
  .accordion-section {
    position: relative;
    padding: var(--space-9) 0;
    overflow: hidden;
  }

  .accordion-container {
    max-width: var(--container-xl);
    padding: 0 var(--pad-component-lg);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 7rem;
    align-items: center;
  }

  /* Left Column */
  .accordion-left {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .accordion-left h2 {
    margin: 0;
    font-size: var(--text-h2);
  }

  .accordion-description {
    margin: 0;
    font-size: var(--text-base);
    color: var(--color-text);
    line-height: 1.6;
  }

  .accordion-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  /* Right Column */
  .accordion-right {
    width: 100%;
    height: 100%;
  }

  .accordion-right img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    object-fit: cover;
  }

  /* =========================================
   * DECORATIONS
   * ========================================= */

  .decoration {
    position: absolute;
    z-index: -1;
    pointer-events: none;
  }

  .decoration img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .decoration-left {
    left: -4%;
    top: 0px;
    transform: rotate(0deg);
    width: 500px;
    height: auto;
  }

  /* =========================================
   * RESPONSIVE
   * ========================================= */

  @media (max-width: 1023px) {
    .decoration-left,
    .decoration-right {
      display: none;
    }

    .accordion-container {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }
  }

  @media (max-width: 767px) {
    .accordion-left h2 {
      font-size: var(--text-h3);
    }

    .accordion-description {
      font-size: var(--text-base);
    }
  }
</style>