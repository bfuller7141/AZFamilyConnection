---
interface Props {
  color1?: string;
  color2?: string;
  color3?: string;
  color4?: string;
}

const {
  color1 = "var(--brand-primary-500)",
  color2 = "var(--brand-secondary-500)",
  color3 = "var(--brand-accent-500)",
  color4 = "var(--brand-tertiary-500)",
} = Astro.props;
---

<div
  class="color-divider"
  role="presentation"
  aria-hidden="true"
  style={`--divider-color-1:${color1}; --divider-color-2:${color2}; --divider-color-3:${color3}; --divider-color-4:${color4};`}
>
  <div class="divider-section section-1"></div>
  <div class="divider-section section-2"></div>
  <div class="divider-section section-3"></div>
  <div class="divider-section section-4"></div>
</div>

<style>
  .color-divider {
    width: 100%;
    height: 20px;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
  }

  .divider-section {
    width: 100%;
    height: 100%;
  }

  .section-1 {
    background: var(--divider-color-1);
  }
  .section-2 {
    background: var(--divider-color-2);
  }
  .section-3 {
    background: var(--divider-color-3);
  }
  .section-4 {
    background: var(--divider-color-4);
  }
</style>
