---
import { getCollection, render } from "astro:content";
import type { CollectionEntry } from "astro:content";
import LegalPageLayout from "../../layouts/LegalPageLayout.astro";

type LegalEntry = CollectionEntry<"legal">;

export async function getStaticPaths() {
  const legalEntries: LegalEntry[] = await getCollection(
    "legal",
    ({ data }) => !data.draft && (data.language === "en" || data.language === "both")
  );

  return legalEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<LegalPageLayout
  title={entry.data.title}
  description={entry.data.description}
  language="en"
  canonical={`/legal/${entry.slug}`}
>
  <Content />
</LegalPageLayout>
