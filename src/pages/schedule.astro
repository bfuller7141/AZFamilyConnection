---
import BaseLayout from '../layouts/BaseLayout.astro';
import SubpageHero from '../components/SubpageHero.astro';

import '../styles/base.css';
import '../styles/theme.root.css';
---

<BaseLayout
  title="Schedule Supervised Visitation | AZ Family Connections"
  description="Request visitation or safe exchange services with Arizona Family Connections. Share your case details and our team will follow up to confirm your visit soon."
  language="en"
  canonical="/schedule/"
>
  <SubpageHero
    subtitle="Get Started with Services"
    title="Start Your Visitation Journey"
    description="Fill out the form below to begin the intake process. Our team will review your information and contact you to discuss the next steps."
    ctaText="Complete Form"
    ctaUrl="/schedule/#intake-form"
    decorationLeft="/images/calendar-watermark.svg"
    decorationRight="/images/checkbox-watermark.svg"
  />

  <section class="schedule-section">
    <div class="schedule-container">
      <form
        class="schedule-form"
        method="POST"
        name="afc-schedule"
        data-netlify="true"
        netlify-honeypot="bot-field"
        id="intake-form"
      >
        <!-- Required hidden field for Netlify -->
        <input type="hidden" name="form-name" value="afc-schedule" />

        <!-- Hidden field for custom subject: New Intake from {Name} -->
        <input type="hidden" name="custom-subject" value="" />

        <!-- Honeypot field for spam bots -->
        <p class=" honeypot-field" aria-hidden="true">
          <label for="bot-field">Do not fill this field if you are human</label>
          <input id="bot-field" name="bot-field" type="text" />
        </p>

        <!-- Service Selection -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Service Information</legend>

          <div class="form-group">
            <label class="form-label">Service Type:</label>
            <div class="form-checkboxes">
              <label class="form-checkbox">
                <input type="checkbox" name="serviceType" value="Supervised Visitation" />
                Supervised Visitation
              </label>
              <label class="form-checkbox">
                <input type="checkbox" name="serviceType" value="Monitored Exchange" />
                Monitored Exchange
              </label>
              <label class="form-checkbox">
                <input type="checkbox" name="serviceType" value="Child Transportation" />
                Child Transportation
              </label>
            </div>
          </div>

          <div class="form-group">
            <label for="nextCourtDate" class="form-label">Next Court Date:</label>
            <input type="date" id="nextCourtDate" name="nextCourtDate" class="form-input" />
          </div>
        </fieldset>

        <!-- Your Information -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Your Information</legend>

          <div class="form-row">
            <div class="form-group">
              <label for="yourName" class="form-label">Your Name: *</label>
              <input type="text" id="yourName" name="yourName" class="form-input" required />
            </div>
            <div class="form-group">
              <label for="yourRole" class="form-label">Your Role: *</label>
              <select id="yourRole" name="yourRole" class="form-select" required>
                <option value="">-- Select --</option>
                <option value="Custodial Parent">Custodial Parent</option>
                <option value="Visiting Parent">Visiting Parent</option>
                <option value="Guardian">Guardian</option>
                <option value="Attorney">Attorney</option>
              </select>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="email" class="form-label">Email: *</label>
              <input type="email" id="email" name="email" class="form-input" required />
            </div>
            <div class="form-group">
              <label for="phone" class="form-label">Phone Number: *</label>
              <input type="tel" id="phone" name="phone" class="form-input" required />
            </div>
          </div>
        </fieldset>

        <!-- Other Parent Information -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Other Parent Information</legend>

          <div class="form-row">
            <div class="form-group">
              <label for="otherParentName" class="form-label">Other Parent Name:</label>
              <input type="text" id="otherParentName" name="otherParentName" class="form-input" />
            </div>
            <div class="form-group">
              <label for="otherParentRole" class="form-label">Role:</label>
              <select id="otherParentRole" name="otherParentRole" class="form-select">
                <option value="">-- Select --</option>
                <option value="Custodial Parent">Custodial Parent</option>
                <option value="Visiting Parent">Visiting Parent</option>
                <option value="Guardian">Guardian</option>
                <option value="Attorney">Attorney</option>
              </select>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="otherParentEmail" class="form-label">Email:</label>
              <input type="email" id="otherParentEmail" name="otherParentEmail" class="form-input" />
            </div>
            <div class="form-group">
              <label for="otherParentPhone" class="form-label">Phone Number:</label>
              <input type="tel" id="otherParentPhone" name="otherParentPhone" class="form-input" />
            </div>
          </div>
        </fieldset>

        <!-- Attorney Information -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Legal Representation</legend>

          <div class="form-group">
            <label class="form-label">Are you represented by an attorney?</label>
            <div class="form-radios">
              <label class="form-radio">
                <input type="radio" name="hasAttorney" value="yes" />
                Yes
              </label>
              <label class="form-radio">
                <input type="radio" name="hasAttorney" value="no" />
                No
              </label>
            </div>
          </div>

          <div class="form-group">
            <label for="attorneyInfo" class="form-label">Attorney Name & Phone (if applicable):</label>
            <input type="text" id="attorneyInfo" name="attorneyInfo" class="form-input" />
          </div>
        </fieldset>

        <!-- Language -->
        <fieldset class="form-fieldset">
          <legend class="form-legend">Language Preference</legend>

          <div class="form-group">
            <label for="languagePreference" class="form-label">Preferred Language:</label>
            <select id="languagePreference" name="languagePreference" class="form-select">
              <option value="">-- Select a language --</option>
              <option value="English">English</option>
              <option value="Spanish">Spanish</option>
              <option value="Chinese">Chinese</option>
              <option value="Tagalog">Tagalog</option>
              <option value="Vietnamese">Vietnamese</option>
              <option value="Arabic">Arabic</option>
              <option value="French">French</option>
              <option value="Korean">Korean</option>
              <option value="Russian">Russian</option>
              <option value="Portuguese">Portuguese</option>
              <option value="Other">Other</option>
            </select>
          </div>
        </fieldset>

        <!-- Submit -->
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </section>
</BaseLayout>

<style>
  .schedule-section {
    padding: 0 0 var(--space-8) 0;
  }

  .schedule-container {
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: 0 var(--pad-component-lg);
  }

  .schedule-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .form-fieldset {
    border: 2px solid var(--brand-primary-200);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    margin: 0;
  }

  .form-legend {
    font-size: var(--text-lg);
    font-weight: var(--weight-bold);
    color: var(--brand-primary-500);
    padding: 0 var(--space-2);
    margin-bottom: var(--space-4);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }

  .form-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-4);
  }

  .form-label {
    font-weight: var(--weight-bold);
    font-size: var(--text-base);
    color: var(--color-text);
  }

  .form-input,
  .form-select,
  .form-textarea {
    padding: var(--space-3);
    border: 2px solid var(--color-border);
    border-radius: var(--radius-md);
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-text);
    background: var(--color-surface);
    transition: all var(--duration-std) var(--ease-standard);
  }

  .form-input:hover,
  .form-select:hover,
  .form-textarea:hover {
    border-color: var(--brand-primary-500);
  }

  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus {
    border-color: var(--brand-primary-500);
  }

  .form-textarea {
    resize: vertical;
    min-height: 100px;
  }

  .form-checkboxes,
  .form-radios {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .form-checkbox,
  .form-radio {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    cursor: pointer;
    font-size: var(--text-sm);
    color: var(--color-text);
  }

  .form-checkbox input,
  .form-radio input {
    cursor: pointer;
    width: 18px;
    height: 18px;
    accent-color: var(--brand-primary-500);
  }

  .form-child-section {
    padding: var(--space-4);
    background: var(--color-surface-2);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-4);
  }

  .form-subheading {
    margin: 0 0 var(--space-3);
    font-size: var(--text-base);
    font-weight: var(--weight-bold);
    color: var(--color-text);
  }

  .form-note {
    margin: 0;
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    font-style: italic;
  }

  .submit-success {
    background: var(--color-success) !important;
    border-color: var(--color-success) !important;
    color: var(--color-success-contrast, #fff) !important;
  }

  .form-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    margin-top: var(--space-6);
    padding-top: var(--space-6);
    border-top: 1px solid var(--color-border);
  }

  .honeypot-field {
    display: none;
  }

  @media (max-width: 767px) {
    .schedule-container {
      padding: 0 var(--pad-component);
    }

    .form-fieldset {
      padding: var(--space-4);
    }

    .form-row {
      grid-template-columns: 1fr;
    }

    .form-input,
    .form-select,
    .form-textarea {
      font-size: 16px;
    }
  }
</style>

<script is:inline type="module">
  function encodeFormData(data) {
    const pairs = [];
    for (const [key, value] of data.entries()) {
      pairs.push(encodeURIComponent(key) + '=' + encodeURIComponent(value));
    }
    return pairs.join('&');
  }

  const scheduleForm = document.querySelector('.schedule-form');
  const submitButton = scheduleForm instanceof HTMLFormElement
    ? scheduleForm.querySelector('button[type="submit"]')
    : null;
  const defaultSubmitText = submitButton instanceof HTMLButtonElement
    ? submitButton.textContent || 'Submit'
    : 'Submit';

  if (scheduleForm instanceof HTMLFormElement) {
    scheduleForm.addEventListener('submit', (event) => {
      event.preventDefault();

      const formData = new FormData(scheduleForm);

      const yourName = formData.get('yourName');
      const email = formData.get('email');
      const phone = formData.get('phone');
      if (!yourName || !email || !phone) {
        alert('Please complete all required fields before submitting.');
        return;
      }

      // Ensure Netlify knows which form this is
      formData.set('form-name', scheduleForm.getAttribute('name') || 'afc-schedule');

      // Build custom subject: "New Intake from {Name}"
      const customSubject = `New Intake from ${yourName}`;
      formData.set('custom-subject', customSubject);

      // Keep hidden input in sync (optional)
      const customSubjectInput = scheduleForm.querySelector('input[name="custom-subject"]');
      if (customSubjectInput) {
        customSubjectInput.value = customSubject;
      }

      if (submitButton instanceof HTMLButtonElement) {
        submitButton.classList.remove('submit-success');
        submitButton.classList.add('btn-primary');
        submitButton.disabled = true;
        submitButton.textContent = 'Submitting...';
      }

      fetch('/', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: encodeFormData(formData),
      })
        .then(() => {
          console.log('Schedule form submitted:', Object.fromEntries(formData.entries()));
          setTimeout(() => {
            if (submitButton instanceof HTMLButtonElement) {
              submitButton.classList.remove('btn-primary');
              submitButton.classList.add('submit-success');
              submitButton.textContent = 'Thank you for your inquiry';
              submitButton.disabled = false;
            }
          }, 500);
          scheduleForm.reset();
        })
        .catch((error) => {
          console.error('Schedule form submission error:', error);
          if (submitButton instanceof HTMLButtonElement) {
            submitButton.classList.remove('submit-success');
            submitButton.classList.add('btn-primary');
            submitButton.textContent = defaultSubmitText;
            submitButton.disabled = false;
          }
          alert('There was a problem submitting the form. Please try again.');
        });
    });
  }
</script>


